import random

class Driver:
    def __init__(self, ID, schedule):
        self.ID = ID
        self.schedule = schedule # list of days of the week the driver will pass the sign
        self.data = {} # dictionary to store the number of times the driver saw each message
        
    def update_data(self, message):
        # If the message is already in the data, increment the count
        if message in self.data:
            self.data[message] += 1
        # Otherwise, add the message to the data with a count of 1
        else:
            self.data[message] = 1

def generate_drivers(num_drivers):
    drivers = []
    for i in range(num_drivers):
        schedule = generate_schedule()
        driver = Driver(i, schedule)
        drivers.append(driver)
    return drivers

def generate_schedule():
    return random.choices(range(7), k=random.randint(1, 5))
